{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../../ChatRoom/server/build",
        "rootDir": "./src",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../../ChatRoom/server/node_modules",
        "build",
        "src/tests"
    ]
}